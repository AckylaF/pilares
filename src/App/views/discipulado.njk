{% extends "layout.njk" %}

{% block head %}
  <title>Discipulado Pilares</title>
  <link type="text/css" rel="stylesheet" href="/styles/discipulado.css">
{% endblock head %}


{% block content %}
  <div on class="discipulado__cover">
  </div>
  
  <main class="container">

    <article>
      <h3>{{content.title}}</h3>
      <p>{{content.content}}</p>
    </article>

    <form class="feedback" action="/send" method="POST">
      <div class="form__name">
          <label for="name" id="name__label">Nome</label>
          <input 
            type="text"
            name="name"
            id="name" 
            placeholder="Escreva seu nome" 
            required
          >
      </div>
      <input id="feedbackDay" type="hidden" name="feedbackDay">
      <textarea onclick="Mask.getFeedbackDay()" name="mentorship" id="mentorship" required></textarea>
      <button type="submit" class="button">Enviar</button>
    </form>

    <p class="farewell">Com a graça de Deus, nos vemos amanhã!</p>

  </main>
{% endblock content %}